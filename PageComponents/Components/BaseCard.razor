<div class="base-card @VariantClass @CssClass" style="@BorderRadiusStyle">
    @if (ShowHeader && HeaderContent != null)
    {
        <div class="card-header @HeaderLayoutClass @HeaderAlignClass">
            @HeaderContent
        </div>
    }

    <div class="card-body">
        @ChildContent
    </div>

    @if (ShowFooter && FooterContent != null)
    {
        <div class="card-footer @FooterLayoutClass @FooterAlignClass">
            @FooterContent
        </div>
    }
</div>
